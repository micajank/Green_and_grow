<% restaurants.forEach(function(restaurant) { %>
    <div class="restaurant">
        <div class="r">
            <img src="<%= restaurant.photos[0].photo.url %>">
        </div>
        <h3>
            <%= restaurant.restaurant.name %>
        </h3>
        <h4> Location:
            <%= restaurant.restaurant.location.address %>
        </h4>
        <!-- <a href="/restaurants/<%= restaurant.restaurant.id %>">
            Click for details!
        </a> -->
        <form action="/restaurants/<%= restaurant.restaurant.id %>" method="POST">  
            <input type="hidden" name="id" value="<%= restaurant.restaurant.id %>"> 
            <input type="submit" value="click for details">
        </form>
    </div>
<% }) %>
